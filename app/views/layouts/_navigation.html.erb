<ul class="nav navbar-nav">
  <li><%= link_to 'Home', dashboard_path %></li>
</ul>
<% if logged_in? %>
  <ul class="nav navbar-nav pull-right">
    <li class='menu-items navigation-link menu-item'>
      <%= link_to 'My Library', user_path(current_user) %>
    </li>
    <div class='btn-group'>
      <%= link_to('', class: 'btn btn-large dropdown-toggle', 'data-toggle' => 'dropdown') do %>
        <%= current_user.username %>
        <span class='caret'></span>
      <% end %>
      <ul class='dropdown-menu'>
        <li>
          <%= link_to edit_user_path(current_user) do %>
            <i class='icon-pencil'></i>
            edit profile
          <% end %>
        </li>
        <li>
          <%= link_to user_path(current_user) do %>
            <i class='icon-user'></i>
            view profile
          <% end %>
        </li>
        <li>
          <%= link_to log_out_path(current_user) do %>
            <i class='icon-circle-arrow-left'></i>
            logout
          <% end %>
        </li>
      </ul>
    </div>
  </ul>
<% else %>
  <ul class="nav navbar-nav pull-right">
    <li><%= link_to 'Log in', log_in_path %></li>
  </ul>
<% end %>

